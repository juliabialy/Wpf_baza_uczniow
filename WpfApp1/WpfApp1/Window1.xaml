<Window x:Class="WpfApp1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj/Edytuj Użytkownika" Height="600" Width="450">
    <ScrollViewer>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="PESEL*" Grid.Row="0" Margin="0,5"/>
            <TextBox x:Name="PeselTextBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

            <TextBlock Text="Imię*" Grid.Row="1" Margin="0,5"/>
            <TextBox x:Name="NameTextBox" Grid.Row="1" Grid.Column="1" Margin="5"/>

            <TextBlock Text="Drugie imię" Grid.Row="2" Margin="0,5"/>
            <TextBox x:Name="MiddleNameTextBox" Grid.Row="2" Grid.Column="1" Margin="5"/>

            <TextBlock Text="Nazwisko*" Grid.Row="3" Margin="0,5"/>
            <TextBox x:Name="SurnameTextBox" Grid.Row="3" Grid.Column="1" Margin="5"/>

            <TextBlock Text="Data urodzenia*" Grid.Row="4" Margin="0,5"/>
            <DatePicker x:Name="BirthDatePicker" Grid.Row="4" Grid.Column="1" Margin="5"/>

            <TextBlock Text="Numer telefonu" Grid.Row="5" Margin="0,5"/>
            <TextBox x:Name="PhoneTextBox" Grid.Row="5" Grid.Column="1" Margin="5"/>

            <TextBlock Text="Adres zamieszkania*" Grid.Row="6" Margin="0,5"/>
            <TextBox x:Name="AddressTextBox" Grid.Row="6" Grid.Column="1" Margin="5"/>

            <TextBlock Text="Miejscowość*" Grid.Row="7" Margin="0,5"/>
            <TextBox x:Name="CityTextBox" Grid.Row="7" Grid.Column="1" Margin="5"/>

            <TextBlock Text="Kod pocztowy*" Grid.Row="8" Margin="0,5"/>
            <TextBox x:Name="PostalCodeTextBox" Grid.Row="8" Grid.Column="1" Margin="5"/>

            <StackPanel Grid.Row="10" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                <Button Content="OK" Width="75" Margin="5" Click="OkButton_Click"/>
                <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
