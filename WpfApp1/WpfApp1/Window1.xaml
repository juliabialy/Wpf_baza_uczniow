<Window x:Class="WpfApp1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
	<Grid Margin="0,0,0,8">


		<Button x:Name="button" Content="dodaj" Margin="0,0,33,27" Click="button_Click" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontWeight="Bold" />

		<TextBox  x:Name="nameTextBox" HorizontalAlignment="Left" Height="22" Margin="186,36,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="148" RenderTransformOrigin="0.575,5.395"/>
		<Label Content="Imię: " HorizontalAlignment="Left" Height="26" Margin="126,34,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="1.3,0.742" FontSize="16"/>

		<TextBox  x:Name="snameTextBox" HorizontalAlignment="Left" Height="24" Margin="188,72,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="148"/>
		<Label Content="Nazwisko: " HorizontalAlignment="Left" Height="26" Margin="88,66,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="1.3,0.742" FontSize="16"/>

		<TextBox  x:Name="peselTextBox" HorizontalAlignment="Left" Height="24" Margin="186,137,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="272"/>
		<Label Content="PESEL:" HorizontalAlignment="Left" Height="28" Margin="108,135,0,0" VerticalAlignment="Top" Width="60" RenderTransformOrigin="-1.3,-2.61" FontSize="16"/>

		<TextBox  x:Name="scnameTextBox" HorizontalAlignment="Left" Height="24" Margin="492,32,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="148" RenderTransformOrigin="0.575,5.395"/>
		<Label Content="Drugie Imię: " HorizontalAlignment="Left" Height="42" Margin="388,26,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="1.3,0.742" FontSize="16"/>

		<DatePicker x:Name="BirthDatePicker" HorizontalAlignment="Left" Height="23" Margin="186,195,0,0"   VerticalAlignment="Top" Width="146"/>
		<Label Content="Data urodzenia:" HorizontalAlignment="Left" Height="27" Margin="56,191,0,0" VerticalAlignment="Top" Width="124" RenderTransformOrigin="1.3,0.742" FontSize="16"/>

		<TextBox  x:Name="PhoneNumber" HorizontalAlignment="Left" Height="24" Margin="184,342,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="148"/>
		<Label Content="Numer telefonu" HorizontalAlignment="Left" Height="28" Margin="54,338,0,0" VerticalAlignment="Top" Width="126" RenderTransformOrigin="-1.73,1.573" FontSize="16"/>

		<TextBox  x:Name="homeadressTextBox" HorizontalAlignment="Left" Height="24" Margin="180,280,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="147"/>
		<Label Content="Adres Zamieszkania:" HorizontalAlignment="Left" Height="28" Margin="18,276,0,0" VerticalAlignment="Top" Width="170" RenderTransformOrigin="1.309,-1.463" FontSize="16"/>

		<TextBox  x:Name="Town" HorizontalAlignment="Left" Height="24" Margin="492,284,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="147"/>
		<Label Content="MIejscowość" HorizontalAlignment="Left" Height="28" Margin="375,280,0,0" VerticalAlignment="Top" Width="125" RenderTransformOrigin="1.3,0.742" FontSize="16"/>

	</Grid>
</Window>
